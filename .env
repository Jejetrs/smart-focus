# Railway Environment Configuration
# Add this to Railway environment variables

# Python settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# OpenCV settings for headless environment
OPENCV_LOG_LEVEL=ERROR
OPENCV_FFMPEG_CAPTURE_OPTIONS=video_codec;h264

# MediaPipe settings
MEDIAPIPE_DISABLE_GPU=1

# Flask settings
FLASK_ENV=production
FLASK_DEBUG=0

# Railway specific
RAILWAY_ENVIRONMENT=production
PORT=5000

# Disable GUI features for server environment
DISPLAY=""
XVFB_RUN=""

# TTS settings (disable for server)
PYTTSX3_DEBUG=0
